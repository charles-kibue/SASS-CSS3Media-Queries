{
	"compilerOptions": {
		"declaration": true,
		"declarationDir": "types/",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"jsx": "react",
		"lib": ["es2015", "es2017", "dom"],
		"module": "es2015",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"sourceMap": true,
		"mapRoot": "map/",
		"strictNullChecks": true,
		"target": "es5"
	},
	"exclude": ["node_modules", "types"]
}
